@page
@model AdminMPA.Pages.Admin.ManageBooksModel
@{
    ViewData["Title"] = "Manage Books";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div>
    <a class="btn btn-outline-primary text-black align-content-center ms-2" asp-page="CreateBook"> Add book</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Edition</th>
                <th scope="col">Year</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Books != null && Model.Books.Any())
            {               
                @foreach (var book in Model.Books)
                {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.Edition</td>
                                <td>@book.Year</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-page="EditBook" asp-route-id="@book.BookId">Manage</a>
                                </td>
                            </tr>
                }
            }
            else
            {
                <tr>
                    <td>No books available.</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
        </table>
</div>
